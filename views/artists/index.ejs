<%- include('../partials/header') %>

<body>
  <div class="container">
    <div class="row">
      <div id="artists" class="col s12">
        <% artists.forEach(function(artist) { %>
          <div class="card aep-card">
            <div class="card-content white-text">
              <div>
                <span class="card-title">
                  <a href="/artists/<%= artist._id %>"><% if(artist.member.avatarURL) { %>
                    <img src="<%= artist.member.avatarURL %>" alt="" class="circle aep-menu-img">
                    <% } else { %> 
                      <i class="small material-icons">palette</i>
                    <% } %>
                  <span class="artist-name"><%= artist.member.name %></span>
                </span>
              </div>
              <div><small> <a href="/artists/<%= artist._id %>"> details</a></small></div>
              <!-- Add Dynamic UI form below this line -->
              <% if (artist.member._id.equals(user && user._id)) { %>
                <div class="card-action">
                  <p> You're logged In!
                </div>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

<%- include('../partials/footer') %>