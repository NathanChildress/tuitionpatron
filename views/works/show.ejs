<%- include('../partials/header') %>

<h1><%= title %> </h1>
<body>
    <div class="container">
      <div class="row">
        <div id="work" class="col s12">
            <div class="card aep-card">
              <div class="card-content >
                <div>
                  <span class="card-title">
                    <i class="small material-icons">palette</i>
                    <span class="artist-name">By: <%= work.artistId.member.name %></span>
                  </span>
                </div>
                <div>
                    <img src="<%= work.imageURL %>" alt="image">
                </div>
                <div>
                    <ul> Used Mediums:
                    
                        <li><%= work.mediums %> </li>
                    
                </div>
                <div>
                    Open for Commission:
                    <div><%= work.artistId.artistAvailable %></div>
                </div>
                <!-- Add Dynamic UI form below this line -->
                <% if (work.artistId.member._id.equals(user && user._id)) { %>
                  <div class="card-action">
                        <a href="/works/<%= work._id %>/update"><button class="button btn-success">Update</button> </a>
                  </div>
                  <div class="card-action">
                <% } else if (work.artistId.artistAvailable) { %>
                    <div class="card-action">
                        <p> They're open for Commission. 
                          <% if(locals.user){ %>
                            <a href="/works/<%= work.artistId._id %>/new"><button class="button btn-success">Update</button> </a>
                            <% } else { %>
                              Login\Sign Up to request a commission from this artist.
                            <% } %>
                      </div>
                <% }; %>
              </div>
            </div>
        </div>
      </div>
    </div>

<%- include('../partials/footer') %>