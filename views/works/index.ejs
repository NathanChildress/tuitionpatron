<%- include('../partials/header') %>

<body>
  <div class="container">
    <div class="row">
      <div id="artists" class="col s12">
        <% works.forEach(function(work) { %>
          <div class="card aep-card">
            <div class="card-content white-text">
              <div>
                <span class="card-title">
                  <i class="small material-icons">palette</i>
                  <span class="artist-name"><%= work.workName %></span>
                  <a href="/artists/<%= work.artistId._id %>">
                    <span class="artist-name"><%= work.artistId.member.name %></span>
                  </a>
                </span>
              </div>
              <div>
                <a href="/works/<%= work._id %>">
                  <img src="<%= work.imageURL %>" alt="" class="aep-works-img">
                </a>
              </div>
              
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>